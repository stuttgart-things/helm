{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "registryAliases": {
    "stable": "https://charts.helm.sh/stable"
  },
  "commitMessageTopic": "helm chart {{depName}}",
  "helmfile": {
    "fileMatch": [
      "(^|/)helmfile\\.ya?ml(?:\\.gotmpl)?$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)values\\.ya?ml$"
    ]
  }
}